@page
@model AuthorAnne.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container">
    <div class="row">
        <div class="col-md">
            <h2>Contact</h2>
            <p>
                Feel free to contact me with any writing related comments or questions. I was an Agony Aunt once but that's another story.
            </p>
        </div>
    </div>

    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg">
                <h3>Your Contact Details</h3>

                <div class="form-group row">
                    <label class="col-md col-form-label"></label>
                    <div class="col-md">
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md col-form-label"></label>
                    <div class="col-md">
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md col-form-label"></label>
                    <div class="col-md">
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg">
                <h3>Your Enquiry</h3>

                <div class="form-group row">
                    <label class="col-md col-form-label"></label>
                    <div class="col-md">
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md d-md-block d-sm-none">

            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-block">Send Enquiry</button>
            </div>
            <div class="col-md d-md-block d-sm-none">

            </div>
        </div>

        <hr class="Divider" />
    </form>
</div>